{
  "dataset_reader": {
    "type": "seq2seq"
  },
  "train_data_path": "SCAN-master/simple_split/train.txt",
  "validation_data_path": "SCAN-master/simple_split/validate.txt",
  "test_data_path": "SCAN-master/simple_split/test.txt",
  "model": {
    "type": "simple_seq2seq_with_metrics_decorated",
    "source_embedder": {
      "token_embedders": {
        "tokens": {
            "type": "embedding",
            "embedding_dim": 100,
            "trainable": true
        }
      }
    },
    "encoder": {
        "type": "lstm",
        "bidirectional": false,
        "input_size": 100,
        "hidden_size": 200,
        "num_layers": 2,
        "dropout": 0.5
    },
    "max_decoding_steps":70,
    "scheduled_sampling_ratio":0.5
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["source_tokens", "num_tokens"]],
    "batch_size": 1
  },
  "trainer": {
    "num_epochs": 8,
    "grad_norm": 5.0,
    "patience" : 75,
    "cuda_device" : 0,
    "validation_metric":"+sequence_accuracy",
    "learning_rate_scheduler": {
      "type": "reduce_on_plateau",
      "factor": 0.5,
      "mode": "max",
      "patience": 75
    },
    "optimizer": {
      "type": "adam"
    }
  }
}
