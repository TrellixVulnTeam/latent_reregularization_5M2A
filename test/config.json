{
    "dataset_reader": {
        "type": "seq2seq"
    },
    "iterator": {
        "type": "bucket",
        "batch_size": 1,
        "sorting_keys": [
            [
                "source_tokens",
                "num_tokens"
            ]
        ]
    },
    "model": {
        "type": "simple_seq2seq_with_metrics_decorated",
        "encoder": {
            "type": "lstm",
            "bidirectional": false,
            "dropout": 0.5,
            "hidden_size": 200,
            "input_size": 100,
            "num_layers": 2
        },
        "max_decoding_steps": 70,
        "scheduled_sampling_ratio": 0.5,
        "source_embedder": {
            "token_embedders": {
                "tokens": {
                    "type": "embedding",
                    "embedding_dim": 100,
                    "trainable": true
                }
            }
        }
    },
    "train_data_path": "SCAN-master/simple_split/train.txt",
    "validation_data_path": "SCAN-master/simple_split/validate.txt",
    "test_data_path": "SCAN-master/simple_split/test.txt",
    "trainer": {
        "cuda_device": 0,
        "grad_norm": 5,
        "learning_rate_scheduler": {
            "type": "reduce_on_plateau",
            "factor": 0.5,
            "mode": "max",
            "patience": 75
        },
        "num_epochs": 8,
        "optimizer": {
            "type": "adam"
        },
        "patience": 75,
        "validation_metric": "+sequence_accuracy"
    }
}